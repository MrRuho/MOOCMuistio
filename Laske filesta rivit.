int riveja = 0;
        try (Scanner tiedostonLukija = new Scanner(new File("UFO.txt"))) {
            while (tiedostonLukija.hasNextLine()) {
            // Luetaan yksi rivi. Rivi taytyy lukea tai muuten jaa ikuiseen looppiin.
            String rivi = tiedostonLukija.nextLine();
            riveja ++;
            
            }
        } catch (Exception e) {
                System.out.println("Virhe: " + e.getMessage());
        }
        System.out.println(riveja);
