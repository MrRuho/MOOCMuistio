int linenumber = 0;
try{		
    		File file = new File("UFO.txt");
    		
    		if(file.exists()){		
    		    FileReader fr = new FileReader(file);
    		    LineNumberReader lnr = new LineNumberReader(fr);  		    
    		   // int linenumber = 0;
    		    
    	            while (lnr.readLine() != null){
    	        	linenumber++;
    	            }
    	 
    	            System.out.println("Havaintoja: " + linenumber);
    	 
    	            lnr.close();
                    
    		}else{
    			 System.out.println("tiedostoa ei voi avata");
    		}
    		
    	}catch(IOException e){
    		e.printStackTrace();
    	}
